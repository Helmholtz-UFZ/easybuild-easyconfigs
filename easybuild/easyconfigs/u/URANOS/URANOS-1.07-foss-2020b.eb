easyblock = 'MakeCp'

name = 'URANOS'
version = '1.07'

homepage = 'https://github.com/mkoehli/uranos/tree/main'
description = """Ultra Rapid Adaptable Neutron-Only Simulation for Environmental Research,
 is a Monte Carlo toolkit specifically tailored for environmental sciences."""

toolchain = {'name': 'foss', 'version': '2020b'}
toolchainopts = {'pic': True}

buildopts = 'CXXFLAGS="$CXXFLAGS -std=c++17"'

source_urls = [
    'https://github.com/mkoehli/uranos/tree/main',
]
sources = [{
    'filename': 'uranos-%(version)s.tar.gz',
    'git_config': {
        'url': 'https://github.com/mkoehli',
        'tag': 'v%(version)s',
        'repo_name': 'uranos',
    },
}]

checksums = ['ff90a50e128f257dd0840153c8f6926820f7293ed9eab1c208ec53995ec5b856']

prebuildopts = 'cd src && qmake && '

builddependencies = [
    ('ROOT','6.22.08'),
    ('Qt5','5.14.2')
]

dependencies = [
    ('ROOT', '6.22.08'),
    ('Qt5', '5.14.2')
]

files_to_copy = [(['src/UranosGUI'], 'bin')]

sanity_check_paths = {
    'files': ["bin/UranosGUI"],
    'dirs': [""],
}

moduleclass = 'tools'
